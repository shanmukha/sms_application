<div id = 'top' style ="display:none ; clear:both">
     <div class = 'right'> 
        <%= link_to_function image_tag("cancel.gif", :title=> "Cancel"), "jQuery('#top').hide(); jQuery('#button').show(); return false;" %> 
     </div>
     <h1>New letter</h1>
     <%= render :partial =>"new" %>
     <div class = 'clear'> </div>
</div>


<div id = 'listing-top'>
    
       <div id = 'button'>
	   <span>
                 <%= link_to_function "<span>New letter</span>", "jQuery('#top').show(); jQuery('#button').hide(); return false;", :class => 'buttonAdd' %>
           </span>
       </div>
     	
         
    <h1>Listing all letters</h1>
    <div class="clear"></div>
</div>
<hr />
<div id="listing_file">
   	<table class ="listing" border="1">
  		<tr>
  		        <th>Created by</th>
    			<th>Reference</th>
    			<th>Class</th>
    			<th>View</th>
  		</tr>
		<% @letters.each do |letter| %>
  		<tr class="<%=cycle("odd", "even")%>">
  		        <td><%= letter.user.name %></td>
    			<td><%= letter.reference %></td>
     			<td><%= letter.group.name %></td>
    			<td class="view"><%= link_to '<img src="/images/view.gif" title="View"/>', letter%></td>
  		</tr>
		<% end %>
	</table>
	<%=will_paginate @letters%>
<br />
</div>
<div class="sidebar">
	<h1>Search </h1>
	<% form_for @search do |f| %>
 		<table>
			<tr>
       				<th>Student Name </th>
			</tr>
			<tr>
				<td><%= f.text_field :students_name_like%></td>
			</tr>
                        <tr>
      				<th>Reference</th>
			</tr>
			<tr>
				<td><%= f.text_field :reference_like %></td>
			</tr>
			<tr>
       				<th>Class name </th>
			</tr>
			<tr>
				<td><%= f.text_field :group_name_like%></td>
			</tr>
			<tr>
       				<th> Composed by </th>
			</tr>
			<tr>
				<td><%= f.text_field :user_name_like%></td>
			</tr>
			
			<tr>
       				<td class="btn"><%= f.submit "Search" %> <input type="reset" value="Reset"></td>
  			</tr>
  		</table>
  	<%end%>
</div>
<div class="clear" ></div>

