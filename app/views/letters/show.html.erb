<h1 class = 'heading'>Showing letter prepared for class <%= @letter.group.name %> </h1>
 <div class = 'left part1'>
   <table class="show_page">
	
		<tr>
			  <td><%=h @letter.content %></td>
		</tr>
	        <tr><td><%= link_to "<span>Print this letter</span>", print_letter_path(@letter), :class => 'buttonAdd' %></td></tr>
	</table>

	
  	<!-- <%= link_to 'Delete', @letter, :confirm => 'Are you sure?', :method => :delete %> -->
 </div>
 <div class = 'right part2'>
     <h1 class = 'heading'>Students list, to whom letter was sent </h1>
		<table class="student_list">
		<tr>
			<th>Student name</th>
			<th>Roll number</th>
		</tr>
		<%@students.each do  |student|%>
	 	<tr class="<%=cycle("odd", "even")%>">
			<td><%= student.name%></td>
			<td><%= student.roll_number%></td>
  		</tr>
  		<%end%>
	</table>
</div>

      <div class="clear" ></div>
	

 
