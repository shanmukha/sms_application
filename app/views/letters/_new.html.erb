<% form_for(@letter||Letter.new,:html => {:id => 'main-form'}) do |f| %>
     <div class="create_new">
        <%= f.error_messages %>
        <div class="left part1">
	  <fieldset>
  	    <p>
    	      <%= f.label :letter_content %><br />
    	      <%= f.text_area :content%>
  	    </p> 
	    <span>
    		 <%= f.submit 'Print letter' %> 
  	    </span>
	  </fieldset>
        </div>

     <div id="select_group">
        <label> Select the class to which letter to be printed </label><br /><br />
         <%= f.select :group_id, all_groups, options={:prompt => 'Select class/group'}%>
      	      		<%= image_tag("spinner.gif",
              		:align => "absmiddle",
               		:border => 0,
              		:id => "spinner1",
             	 	:style =>"display: none;" ) %>  
          
         	<%= observe_field("letter_group_id", :frequency => 1,
                  :before => "jQuery('#spinner1').show();",
                  :success => "jQuery('#spinner1').hide();",
                  :url => {:action=>'group_students'}, :method => :get,
                  :with => "'group_id=' + value")%>
                <br /><br />
                <div id="students"></div> 
	</div>
    <div class = 'clear'> </div>	
  </div>
<% end %>


