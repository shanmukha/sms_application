<div class = 'form_wrapper'> 
 <h1 class = 'heading left'>Showing letter prepared for <span><%= @letter.group.name %></span> </h1>

 <div class="clear" ></div>
 <hr />
 <div class = 'left part1'>
   <table class="show_page">
	
		<tr>
		    <td style ='border: 1px solid #ccc;' colspan ='2'><%=h @letter.content %></td>
		</tr>
                <tr>
  		    <td ><%=h @letter.created_at.strftime('%d/%m/%Y') %></td><td class ='blue'><%=h @letter.user.name %></td>
		</tr> 
                <tr><td colspan ='2'><hr /> </td></tr>
	        <tr>
                    <td><%= link_to "<span>Print this letter</span>", print_letter_path(@letter), :class => 'buttonAdd' %></td>
                    <td><%= link_to "<span>Print labels</span>", print_labels_letter_path(@letter, :format => :pdf), :class => 'buttonAdd' %></td>
                </tr>
	</table>

	
  	<!-- <%= link_to 'Delete', @letter, :confirm => 'Are you sure?', :method => :delete %> -->
 </div>


<div class="clear" ></div>
</div>	

 
