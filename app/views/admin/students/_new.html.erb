<%= stylesheet_link_tag 'style','redmond/jquery-ui-1.7.2.custom'%>
 <%=javascript_include_tag 'jquery-1.3.2.min','jquery-ui-1.7.2.custom.min','jrails','datepicker','jquery.cookie','jquery.simplyCountable.js','facebox','jquery.corner','dropdown.js'%>
<hr />

<% form_for(:student,:url => admin_students_path,:html => {:method => :post,:id =>'main-form'} )do |f| %>
  <%= f.error_messages %>
  <div class = 'left'>
    <table class="form_style">
      <tr>
        <th><br/><h2 class="heading">Student Details</h2></th><td></td>
      </tr>
      <tr>
        <th><%= f.label :Student_name %></th>
    	<td><%= f.text_field :name %></td>
      </tr>
      <tr>      
    	<th><%= f.label :Gender %></th>
    	<td><%= f.select :gender,[['Male','male'],['Female','female']] %></td>
      </tr>           
  	  <tr>
        <th><%= f.label :Language %></th>
    	<td><%= f.text_field :language %></td>
      </tr>
  	  <tr>
        <th><%= f.label :Blood_group %></th>
    	<td><%= f.text_field :blood_group %></td>
      </tr>
     <tr>
        <th><%= f.label :Date_of_birth %></th>
        <td><%= f.text_field :dob,:class =>'textbox-small' ,:id => 'date4'%></td>
      </tr>
      <tr>
        <th width="180px;"><%= f.label :Student_mobile_number %></th>
    	<td><%= f.text_field :student_mobile_number %></td>
      </tr>
      <tr>                
        <th><%= f.label :Student_email %></th>
    	<td><%= f.text_field :student_email %></td>
      </tr>
      <tr><th><br/><h2 class="heading">Admission Details</h2></th><td></td></tr>
      <tr>
         <th><%= f.label :admission_number %></th>
         <td><%= f.text_field :admission_number%></td>
      </tr>
     <tr>
        <th><%= f.label :Date_of_admission %></th>
        <td><%= f.text_field :date_of_admission,:class =>'textbox-small' ,:id => 'date2'%></td>
     </tr>
    </table>
  </div>
  
  <div class="right">
   <table class="form_style">
    <tr><th><br/><h2 class="heading">Parent Details</h2></th><td></td></tr>
      <tr>
        <th>Mother's name</th>
    	<td><%= f.text_field :mother %></td>
      </tr>
      <tr>
        <th>Father's name</th>
    	<td><%= f.text_field :father %></td>
      </tr>
      <tr>
        <th>Guardian's name</th>
    	<td><%= f.text_field :guardian %></td>
      </tr>
      <tr>
        <th><%= f.label :email %></th>
        <td><%= f.text_field :email %></td>
     </tr>
     <tr>
       <th><%= f.label :Contact_mobile %></th>
       <td><%= f.text_field :number %></td>
     </tr>
     
     <tr>
       <th>Mother's mobile</th>
       <td><%= f.text_field :mother_mobile %></td>
     </tr>
     <tr>
       <th>Father's mobile</th>
       <td><%= f.text_field :father_mobile %></td>
     </tr>
     <tr>
       <th>Guardian's mobile</th>
       <td><%= f.text_field :guardian_number %></td> 
     </tr>
     <tr>
       <th><%= f.label :address %></th>
       <td><%= f.text_area :address %></td>
     </tr>
     <tr>
       <th><%= f.label :Contact_name %></th>
       <td><%= f.text_field :contact_name %></td>
     </tr>
   </table>
  </div>
  <div class="clear"></div>
  <center> <div class="btns"><span> <%= f.submit 'Create record' %> or <%= link_to_function "Cancel",
	"jQuery('#top').hide(); jQuery('#button').show(); return false;"%>
	</span></div></center>
  <%end%>
<script type="text/javascript">
	$(function() {
		$('#date4').datepicker({yearRange: '1900:2200',showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true, altField: '#date4', altFormat: 'dd-mm-yy',
			changeMonth: true,
			changeYear: true
		});
	});
	</script>
 <script type="text/javascript">
	$(function() {
		$('#date2').datepicker({yearRange: '1900:2200',showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true, altField: '#date2', altFormat: 'dd-mm-yy',
			changeMonth: true,
			changeYear: true
		});
	});
	</script>


