<h1 class = 'heading left'>Showing <span><%=h @group.name %></span> subjects list</h1>	
<div class="clear" ></div>
<hr />
<div id="students">
<table  class="student_list" border="1">
   <tr>    
      <th>Subject name</th>
      <th>Short code</th>
       <th> subject handled by </th>
       
   </tr>
			<% for subject in @subjects%>
		<tr class="<%=cycle("odd", "even")%>">
                        <td><%= subject.name%></td>
                        <td> <%= subject.short_code %> </td>
                       
                      <td> <%= find_subject_handled_by(@group,subject)%></td>
		</tr>
		<%end%>
</table>
</div>
   
