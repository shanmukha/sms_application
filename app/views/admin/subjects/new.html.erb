<div class='form_wrapper'>
  <div class ="create_new">

<% form_for(:subject,:url => admin_subjects_path,:html => {:method => :post} )do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject_name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :short_code %><br />
    <%= f.text_field :short_code %>
  </p>
  <p>
    <%= f.label :max_marks %><br />
    <%= f.text_field :max_marks %>
  </p>
  <p>
    <%= f.label :passing_marks %><br />
    <%= f.text_field :passing_marks %>
  </p>
  <p>
   <%= f.label :use_grade %><br/>
  Yes:<%=f.radio_button :use_grade, 1%>
   No:<%=f.radio_button :use_grade, 0%>
  </p>
   <p>
   <%= f.label :description %><br/>
  <%=f.text_area :description%>
  </p>
  <span>
    <%= f.submit 'Create' %>
</span>
<% end %>

 </div>
<div class="clear"></div>
</div>
