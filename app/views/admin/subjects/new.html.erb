<% form_for(:subject,:url => admin_subjects_path,:html => {:method => :post} )do |f| %>
  <%= f.error_messages %>
<table class="form_style">
  <tr>
    <th><%= f.label :subject_name %></th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th><%= f.label :short_code %></th>
    <td><%= f.text_field :short_code %></td>
  </tr>
  <tr>
    <th><%= f.label :max_marks %></th>
    <td><%= f.text_field :max_marks %></td>
  </tr>
  <tr>
    <th><%= f.label :passing_marks %></th>
    <td><%= f.text_field :passing_marks %></td>
  </tr>
  <tr>
   <th><%= f.label :use_grade %></th>
   <td>Yes:<%=f.radio_button :use_grade, 1%>
  No:<%=f.radio_button :use_grade, 0%></td>
  </tr>
  <tr>
   <th><%= f.label :description %></th>
   <td><%=f.text_area :description%></td>
  </tr>
</table>
<div class="btns" style="margin-left:190px;"><span><%= f.submit 'Create' %></span></div>
  <% end %>
<div class="clear"></div>

