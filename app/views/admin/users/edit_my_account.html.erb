
<h1 class ='heading'><%= "#{@user.name}'s account"%></h1>

	<% if @user.has_role?('admin') && !@user.has_role?('super_admin')%>
	 <h3><%= @user.client_type=="Unlimited" ? "End date: #{@user.end_date.strftime('%d-%m-%y')}" :"Sms balance: #{@user.balance}"%></h3>
	<%end%>
<% form_for([:admin,@user],:url => admin_user_path(@user),:html => {:multipart => true} ) do |f| %>
	<%= render :partial =>"form"%>
		<span><%= f.submit "Submit" %></span>
	<%end%>

	<div class="clear"></div> 

