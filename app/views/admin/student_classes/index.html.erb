<h1 class = 'heading left'>Students list of class <span><%=h @group.name %></span> </h1>	
 <% if @students.blank?%><span class ='right'><%= link_to "<span>Add student list</span>", new_admin_group_student_class_path(@group.id) , :class => 'buttonAdd'%></span>
<%else%>
  <span class ='right'><%= link_to "<span>Edit students list</span>", edit_admin_student_class_path(:id => @group.id) , :class => 'buttonAdd'%></span>
<%end%>
<div class="clear" ></div>
<hr />
<div id="students">
<table  class="student_list" border="1">
  <tr>    
    <th>Student name</th>
    <th>Contact name </th>
    <th>Contact mobile.</th>
    <th>Roll number</th>
  </tr>
  <% for student in @students%>
  <tr class="<%=cycle("odd", "even")%>">
    <td><%= student.name%></td>
    <td><%= student.contact_name %> </td>
    <td><%=h student.number %></td>
     <td><%= find_roll_number(@group,student)%></td>
  </tr>
  <%end%>     
</table>
</div>
    
