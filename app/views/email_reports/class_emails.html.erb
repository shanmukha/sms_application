<%= render :partial => "share_email_links"%>
<h1>Class wise email list</h1>
<%= image_tag Gchart.line(:size => '200x150',
:title => "Graph",
:bg => 'efefef',
:legend =>@classes_name ,
:bar_colors => 'd7b2b2,eaa2a2',
:stacked => false,
:data => @classes_email_size) %>
<br />
<%= image_tag Gchart.bar(:size => '200x150',
:title => "Graph",
:bg => 'efefef',
:legend =>@classes_name  ,
:bar_colors => 'd7b2b2,eaa2a2',
:stacked => false,
:data =>@classes_email_size) %>
<% for group in @classes%>
<br />
<%= group.name%> (<%= find_class_emails(group).size %> )<br />
<table class ="listing">
  		<tr>
  		    <th>Sent by</th>
    			<th>Subject</th>
    			<th>Body</th>
    			<th>Class</th>
    			<th>View</th>
  		</tr>
	<% for email  in find_class_emails(group)%>
  		<tr class="<%=cycle("odd", "even")%>">
  		    <td><%= email.user.name%></td>
     			<td><%=h email.subject %></td>
     			<td><%=h message_body_filter(email.body) %></td>
     			<td><%=h email.group.name%></td>
     			<td class="view"><%= link_to '<img src="/images/view.gif" title="View"/>', email_report_path(email)%></td>
      		</tr>
		<% end %>
	</table>
	<div class = 'clear'> </div>
	<% end %>
