<div class="showpage_content">
	<table class="show_page">
		<tr>		
			<th>Sent date: </th><td><%=h Time.parse(@message.created_at.to_s).strftime('%Y-%m-%d') %></td>
		</tr>
   <tr>		
			<th>Sent by: </th><td><%=h @message.user.name %></td>
		</tr>
		<tr>
			<th>Message:</th><td><%=h @message.message_body %></td>
		</tr>
     
      <%unless @message.tag_id.nil?%>
				<tr>
				<th>Tag name:</th><td><%=h @message.tag.name%></td>
			</tr>
		  <%end%>
		
    <%unless @message.group_id.nil?%>
		<tr>
			<th>Class/group:</th><td><%=h @message.group.name%></td>
		</tr>
     <%else%>
		<tr>
			<th>Mobile number:</th><td><%=h @message.number%></td>
		</tr>
     <%end%>
	</table>
       <table class="student_letter" border="1" >
		<tr>
 			<%if !@students.blank? and @message.sms_id==nil%>
			<th>Student name</th>
			<th>Roll Number</th>
	   	<th>Status</th>
		</tr>
		<%@students.each do  |student|%>
		<tr class="<%=cycle("odd", "even")%>">
			<td><%= student.name%></td>
	  		<td><%= student.roll_number%></td>
   			<td><%= find_message_status(@message,student)%></td>
		</tr>
		<%end%>
		<%end%>
		<%if @message.sms_id==nil and @students.blank?%>
		<tr>
			<td>
				<h3>Status:Sent failed</h3>
			</td>
		</tr>
		<%end%>
		<%if @message.sms_id!=nil%>	
		<tr>
			<td>
	   			<h3>Status:<%= @message.status%><h3>
			</td>
		</tr>
		<%end%>
	</table>
	<%= link_to "Update status", status_update_message_path(@message)%> 
</div>
<%= link_to "Back",:back%>
