<% form_for(@email||Email.new,:html => {:id => 'main-form'}) do |f| %>
     <div class="create_new">
      <div class="left part1">
	<fieldset>
                 <br />
  		<%= f.error_messages %>
 		<p>
    		  <%= f.label :Email_subject %><br />
    		  <%= f.text_field :subject, :class => 'email' %>
  		</p>
                <br />
  		<p>
    		  <%= f.label :Email_content %><br />
    		  <%= f.text_area :body, :class => 'email' %>
  		</p>

   		<span>
                   <br />
    		   <%= f.submit 'Send email' %> 
  		</span>
	</fieldset>
      </div>
   <div id="select_group" class ='part2'>
        <label> Select class </label><br />
        <%= f.select :group_id, all_groups%>
      	      		<%= image_tag("spinner.gif",
              		:align => "absmiddle",
               		:border => 0,
              		:id => "spinner1",
             	 	 :style =>"display: none;" ) %>  
          
         <%= observe_field("email_group_id", :frequency => 1,
                  :before => "jQuery('#spinner1').show();",
                  :success => "jQuery('#spinner1').hide();",
                  :url => {:action=>'group_students'}, :method => :get,
                  :with => "'group_id=' + value")%>
          <br /><br />
          <div id="students"></div>
       </div>
       <div class = 'clear'> </div>
  </div>
<% end %>

