 		<table>
     			<tr>
      				<th>Subject </th>
			</tr>
			<tr>
				<td><%= f.text_field :subject_like %></td>
			</tr>
			<tr>
      				<th>Email Body </th>
			</tr>
			<tr>
				<td><%= f.text_field :body_like %></td>
			</tr>
			<tr>
       				<th>Class Name </th>
			</tr>
			<tr>
				<td><%= f.text_field :group_name_like%></td>
			</tr>
		<tr>
       				<th>Sender name </th>
			</tr>
			<tr>
				<td><%= f.text_field :user_name_like%></td>
			</tr>
			
			<tr>
       				<th>Student Name </th>
			</tr>
			
			<tr>
				<td><%= f.text_field :students_name_like%></td>
			</tr>
			<tr>
