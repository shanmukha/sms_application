<% form_for(@message_template) do |f| %>
<%= f.error_messages %>
	<div class="Errors_left">
 	<p>
    		<%= f.label :message_title %><br />
    		<%= f.text_field :message_title %>
  	</p>
  	<p>
    		<%= f.label :message_body %>&nbsp;&nbsp;(For paragraph use \n)<br />
    		<%= f.text_area :message_body %>
  	</p>
  	<span>
    		<%= f.submit 'Create' %> or <%= link_to 'Cancel & return to Saved messages list', message_templates_path %>
  	</span>
	</div>
<% end %>
<div class="clear"></div>


