<%= render :partial => "share_letter_links"%>
<% form_for :report,:url => month_letters_letter_reports_path,  :html => {:method => :post,:multipart => :true} do |f| %>
 <p>
    		 <%= f.label :from_date%><br />
    		 <%= f.text_field :from_date,:class =>'textbox-small' ,:id => 'date'%>
  	 </p>
  	 <p>
    		 <%= f.label :to_date%><br />
    		 <%= f.text_field :to_date,:class =>'textbox-small' ,:id => 'date1'%>
  	 </p>
  	 <%= f.submit 'Report' %>
 <% end %> 
 <%unless @months.nil?%>
   <% @months.each do |month| %>
  <h1><%=h month_print(month.strftime("%m").to_i) %>   - <%=h month.strftime("%Y") %> (  <%=h @reports[month].nil? ? 0 :@reports[month] %> )</h1>
  
 <table class ="listing">
  		<tr>
  		    <th>Created by</th>
    			<th>Content</th>
    			<th>Class</th>
    			<th>View</th>
  		</tr>
	 <%@letter_months[month].each do |letter| %>
  		<tr class="<%=cycle("odd", "even")%>">
  		    <td><%= letter.user.name%></td>
    			<td><%= message_body_filter(letter.content)%></td>
     			<td><%= letter.group.name %></td>
    			<td class="view"><%= link_to '<img src="/images/view.gif" title="View"/>', letter_report_path(letter)%></td>
  		</tr>
		<% end %>
	</table>
	<div class = 'clear'> </div>
	<% end %>
		<% end %>
