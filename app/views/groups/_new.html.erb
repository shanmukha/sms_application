<% form_for(@group || Group.new,:html => {:id =>'main-form'}) do |f| %>
<%= f.error_messages %>
<div class="create_new">
	<fieldset>
  		<p>
   			<%= f.label :Name %><br />
    			<%= f.text_field :name %>
  		</p>
		<br />
               <label> Select the students belongs to this class/group. or copy from another group</label> 
   		<table class="student_list" border="1">
    			
		 <tr>
		   <th><input type='checkbox' title ="Check All/Uncheck" name='checkall' onclick='checkedAll();'/></th>
     				<th>Student name</th>
				<th>Roll Number</th>
			</tr>
   			<%current_user.students.find(:all).each do |student| %>
  			<tr class="<%=cycle("odd", "even")%>">
       				<td><%= check_box_tag("students[]", student.id, false,:id=> student.id)%></td>
    				<td><%=h student.name %></td>
				<td><%=h student.roll_number%></td>
			</tr>	
    				<%end%>
		</table>
    		
        <p>  <label>Copy students from  another class record.</label>  <br />
            <%= select_tag :group_id,  %{<option value="">Please select class</option>} + 		options_for_select(all_groups) %>    
        </p>
      <span>
    		<%= f.submit 'Create' %> or <%= link_to_function "Cancel",
		"jQuery('#top').hide(); jQuery('#button').show(); return false;"%>
  		</span>
  	</fieldset>  
</div>

<% end %>

