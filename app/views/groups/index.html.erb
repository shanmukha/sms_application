<div id = 'top' style ="display:none ; clear:both">
     <div class = 'right'> 
        <%= link_to_function image_tag("cancel.gif", :title=> "Cancel"), "jQuery('#top').hide(); jQuery('#button').show(); return false;" %> 
     </div>
     <h1>New class record</h1>
     <%= render :partial =>"new"%>
     <div class = 'clear'> </div>
</div>


<div id = 'listing-top'>
    <% if current_user.has_role?('admin')%>
       <div id = 'button'>
	   <span>
               <%= link_to_function "<span>New class record </span>", "jQuery('#top').show(); jQuery('#button').hide(); return false;", :class => 'buttonAdd' %>
           </span>
       </div>
    <%end%> 	
         
    <h1>Listing all classes/groups</h1>
    <div class="clear"></div>
    
</div>

<div id="listing_file">
   <table class="listing">
                       		<tr>
    					<th><%= order @search, :by => :name, :as => "Name"%></th>
    		   			<th><%= order @search, :by => :status, :as => "Status"%></th>
    					<th>View</th>
                                        <th>Edit</th>
  				</tr>
			<% @groups.each do |g| %>
  				<tr class="<%=cycle("odd", "even")%>">
    					<td><%=h g.name %></td>
    					<td><%= h g.status%></td>
    					<td><%= link_to '<img src="/images/view.gif" title="View"/>', g%> </td>
                                        <td><%= link_to image_tag('edit.gif', :title=> "Edit"), edit_group_path(g) %>  </td>
  				</tr>
			<% end %>
			</table>
			<div id="pg"><%=will_paginate @groups%>	</div>
	</div>
	<div class="sidebar">
		<h1>Search</h1>
		<% form_for @search do |f| %>
		 <table>
    			<tr>
      				<th>Name</th>
			</tr>
				<td><%= f.text_field :name_like %></td>
			</tr>
			<tr>
       				<th>Student Name</th>
			</tr>
			<tr>
				<td><%= f.text_field :students_name_like%></td>
			</tr>
			<tr>
       				<td class="btn"><%= f.submit "Search" %> <input type="reset" value="Reset"></td>
  			</tr>
  		</table>
  		<%end%>
	</div>

<div class="clear" ></div>
