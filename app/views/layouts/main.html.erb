<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  	<title><%= configatron.site_name%></title>
   	<%= stylesheet_link_tag 'style','facebox'%>
    <!--[if lte IE 6]>
      <link href="stylesheets/ie6.css" rel="stylesheet" type="text/css" />
    <![endif]-->
   	<%= javascript_include_tag :fckeditor %>
  	<%=javascript_include_tag 'jquery-1.3.2.min','jquery-ui-1.7.2.custom.min','jrails','datepicker','facebox' ,'jquery.corner'%>
  <script type="text/javascript">
     		checked = false;
     		function checkedAll () {
       		if (checked == false){checked = true}else{checked = false}
       		for (var i = 0; i < document.getElementById('main-form').elements.length; i++) {
       		document.getElementById('main-form').elements[i].checked = checked;
      		 }
    		}
   	</script>
	
  	<script type="text/javascript">
       jQuery(function() {
              jQuery("#date").datepicker({showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true, altField: '#date', altFormat: 'dd MM, yy' }) });
	</script>
	
	<script type="text/javascript">
      	jQuery(document).ready(function() {
      	jQuery('a[rel*=facebox]').facebox()
})
	</script>
</head>
<body>
  <div id="body_outer_wrapper">
  <div id="body_wrapper">
    <div id="header">
       <%= render :partial => 'shared/header_links' %>
       <%= render :partial => 'shared/site_heading' %>
       <%= render :partial => 'shared/menu' %>
    </div>  

<%= render :partial => 'shared/notice' %>

<div id="content_wrapper">
