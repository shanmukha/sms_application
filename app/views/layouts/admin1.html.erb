<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  	<title><%= configatron.site_name%></title>
   	<%= stylesheet_link_tag 'style','jquery.treeview','datepicker','jquery-ui-1.7.2.custom'%>
  	<%=javascript_include_tag 'jquery-1.3.2.min','jquery-ui-1.7.2.custom.min','jrails','datepicker','jquery.cookie','jquery.simplyCountable.js','facebox','jquery.corner','dropdown.js'%>

	<script type="text/javascript">
     		checked = false;
     		function checkedAll () {
       		if (checked == false){checked = true}else{checked = false}
       		for (var i = 0; i < document.getElementById('main-form').elements.length; i++) {
       		document.getElementById('main-form').elements[i].checked = checked;
      		 }
    		}
   	</script>
	
  	<script type="text/javascript">
       	jQuery(function() {
			  jQuery("#date").datepicker({showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true, altField: '#date', altFormat: 'dd-mm-yy' }) 
			  });
	</script>
	
	<script type="text/javascript">
       	jQuery(function() {
			  jQuery("#date1").datepicker({showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true, altField: '#date1', altFormat: 'dd-mm-yy' }) 
			  });
	</script>
	
	
	<script type="text/javascript">
      	jQuery(document).ready(function() {
      	jQuery('a[rel*=facebox]').facebox() })
	</script>
</head>

<body>
 <div id="body_outer_wrapper">
  <div id="body_wrapper">
     <div id="header">
	<div class="header_links">
	<%if current_user%>
	       <ul>        
		            <li><%= link_to "Got to application", root_path %>|</li>
		           <li class='<%= request.request_uri == "/users/#{current_user.id}/edit"? 'active': 'link' %>'> 
		           <li><%= link_to "Logout", logout_path %></li>
		         
         	</ul>
              
        		<%else%>

        	<ul>
          		<li><%= link_to "Login", login_path %></li>
          	</ul>	
       
        		<%end%>	
	 </div>
	 <%= render :partial => 'shared/site_heading' %>
			 
		<% if current_user %> 
       <div class = 'clear'> </div>
      <div id="menu">
      	   <% if request.request_uri != "/users/#{current_user.id}/edit"%> 
            	<ul>
            <li class='<%= request.request_uri =~ /users/? 'active': 'link' %>'> <%= link_to "Users list", users_path %></li>
            <li class='<%= request.request_uri =~ /message_templates/? 'active': 'link' %>'> <%= link_to "Saved Messages", message_templates_path%>  </li> 
            <li class='<%= request.request_uri =~ /tags/? 'active': 'link' %>'> <%= link_to "Tags", tags_path %> </li> 
               <li class='<%= request.request_uri =~ /class_reports/? 'active': 'link' %>'> <%= link_to "Reports", class_reports_path %> </li> 
 </ul>
   </div>
   <ul>
   <%if request.request_uri =~/class_reports/ or request.request_uri=~/class_reports/ or request.request_uri=~/teacher_reports/ or request.request_uri=~/tag_reports/ or request.request_uri=~/month_reports/  %>
   		 <%= link_to "Class wise reports",class_reports_path%> 
   		 <%= link_to "Teacher wise reports",teacher_reports_path%>
   		 <%= link_to "Tag wise reports",tag_reports_path%>
  	   <%= link_to "Monthly reports",month_reports_path%>
   <%end%>
 <%end%>
<%end%>
</div> <!-- end of header -->


<%= render :partial => 'shared/notice' %>

<div id="content_wrapper">
    	<div id="wrapper">		  
		 <%= yield  %>
	</div>
</div>

<div class="clear" ></div>
</div>
</div>

<%= render :partial => 'shared/footer' %>
	
<script type="text/javascript">
        jQuery("#body_wrapper").corner("top 10px")
	jQuery("#message_wrapper").corner("corner 5px")
        jQuery(".message_div_top").corner("top 5px")
        jQuery(".message_left").corner("corner 10px")
        jQuery(".message_right").corner("corner 10px")
	jQuery("#menu").corner("corner 5px")
</script>	

</body>	
</html>

