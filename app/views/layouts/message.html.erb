<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  	<title><%= configatron.site_name%></title>
   	<%= stylesheet_link_tag 'style','jquery.treeview','datepicker','jquery-ui-1.7.2.custom'%>
  	<%=javascript_include_tag 'jquery-1.3.2.min','jquery-ui-1.7.2.custom.min','jrails','datepicker','jquery.cookie','jquery.simplyCountable.js','facebox','jquery.corner'%>

	<script type="text/javascript">
     		checked = false;
     		function checkedAll () {
       		if (checked == false){checked = true}else{checked = false}
       		for (var i = 0; i < document.getElementById('main-form').elements.length; i++) {
       		document.getElementById('main-form').elements[i].checked = checked;
      		 }
    		}
   	</script>
	
  	<script type="text/javascript">
       	jQuery(function() {
			  jQuery("#date").datepicker({showOn: 'button', buttonImage: '/images/calendar.gif', buttonImageOnly: true, altField: '#date', altFormat: 'dd MM, yy' }) 
			  });
	</script>
	
	<script type="text/javascript">
      	jQuery(document).ready(function() {
      	jQuery('a[rel*=facebox]').facebox() })
	</script>
</head>

<body>
  <div id="body_wrapper">
     <div id="header">
	 <%= render :partial => 'shared/header_links' %>
         <div id = "site_heading">
	    <h1>
               <%= image_tag('logo.gif') %><span> <%unless current_user.nil?%><%= current_user.has_role?('admin') ? current_user.name : User.find(current_user.parent_id).name%> <%end%></span>
            </h1>
	 </div>
			 
	<%= render :partial => 'shared/menu' %>
</div> <!-- end of header -->

<div id="notice">
   		<p style="color:green"><%= flash[:notice] %></p>
   		<p style="color:red"><%= flash[:error] %></p>
</div> 


<div id = 'message_wrapper'>			  
	<div id = 'message'>		  
		 <%= yield  %>
	</div>
</div>

<div class="clear" ></div>

</div>

<div id="footer">
     
</div>
<script type="text/javascript">
 	jQuery("#body_wrapper").corner("corner 10px")
	jQuery("#message_wrapper").corner("corner 10px")
        jQuery(".message_div_top").corner("top 5px")
        jQuery(".message_left").corner("corner 10px")
        jQuery(".message_right").corner("corner 10px")
	jQuery("#menu").corner("corner 5px")
</script>		

</body>	
</html>

